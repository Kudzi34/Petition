  <div class="container">
    <div class="register">
      <h2>SIGN UP!</h2>
      <form class="regform" id='register-form' method="post">
         <input class="input"type="text" name="firstname" placeholder="Firstname" value="" required>
         <input class="input"type="text" name="lastname" placeholder="Lastname" value=""required>
         <input  class="input"type="text" name="email" placeholder="Email" value="" required>
         <input class="input"type="text" name="password" placeholder="Password" value="" required>
         <button class="button ml-3"type="submit">REGISTER</button>
         <input name="_csrf" value="{{csrfToken}}" type="hidden">
       </form>
      <div class="row">
        {{#if error}} <p>There was an error</p>{{/if}}

      </div>



</div>
