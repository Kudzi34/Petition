<!DOCTYPE HTML>

<div class="boxOfPeople">
    <h2 style="margin-top: 50px;"> There are {{count}}who have signed this petiton: </h2>

<ul class="listOfPeople">
    {{#each signers}}
    {{#if homepage}}

        <li> <a href="{{homepage}}">{{firstname}} {{lastname}}<a/>,{{age}},<a href="/signers/{{city}}">{{city}}</a></li>
        {{else}}

        <li>{{firstname}} {{lastname}},  {{age}},  <a href="/signers/{{city}}">{{city}}</a></li>

        {{/if}}
    {{/each}}

</ul>
</div>
